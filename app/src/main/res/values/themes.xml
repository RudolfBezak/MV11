<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.MV11" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorPrimaryContainer">@color/primary_blue_light</item>
        
        <!-- Accent Colors -->
        <item name="colorAccent">@color/accent_red</item>
        <item name="colorSecondary">@color/secondary_yellow</item>
        <item name="colorSecondaryContainer">@color/secondary_yellow</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background_white</item>
        <item name="colorSurface">@color/background_light</item>
        
        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
    </style>

    <style name="Theme.MV11" parent="Base.Theme.MV11" />
</resources>