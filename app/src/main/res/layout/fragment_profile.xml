<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.mv11.AuthViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary_yellow">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationWidget"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_title"
            style="@style/AppTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>
        

        <ImageView
            android:id="@+id/ivUserPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="24dp"
            android:scaleType="centerCrop"
            android:background="@drawable/profile_foreground"
            android:contentDescription="@string/user_photo"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUploadPhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/upload_photo"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@+id/ivUserPhoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDeletePhoto" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeletePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_photo"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/ivUserPhoto"
            app:layout_constraintStart_toEndOf="@+id/btnUploadPhoto"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_name_profile"
            style="@style/AppSubtitle"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnUploadPhoto" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:minHeight="56dp"
            style="@style/ProfileInfoText"
            app:layout_constraintTop_toBottomOf="@+id/labelName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_email_profile"
            style="@style/AppSubtitle"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

        <TextView
            android:id="@+id/tvUserEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:minHeight="56dp"
            style="@style/ProfileInfoText"
            app:layout_constraintTop_toBottomOf="@+id/labelEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelUid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_uid"
            style="@style/AppSubtitle"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserEmail" />

        <TextView
            android:id="@+id/tvUserUid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:minHeight="56dp"
            style="@style/ProfileInfoText"
            app:layout_constraintTop_toBottomOf="@+id/labelUid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelLocationSharing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_location_sharing"
            style="@style/AppSubtitle"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserUid" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/locationSharingContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/profile_info_background"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/labelLocationSharing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvLocationSharingLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_location_sharing"
                android:textColor="@color/secondary_yellow"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/switchLocationSharing"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchLocationSharing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:trackTint="@color/switch_track_tint"
                app:thumbTint="@color/switch_thumb_tint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/labelTimeInterval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_time_interval"
            style="@style/AppSubtitle"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationSharingContainer" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/timeIntervalContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/profile_info_background"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/labelTimeInterval"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/labelTimeFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_time_from"
                android:textColor="@color/secondary_yellow"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/etTimeFrom"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="HH:mm"
                android:inputType="time"
                android:focusable="false"
                android:clickable="true"
                android:minHeight="48dp"
                android:background="@drawable/profile_info_background"
                android:textColor="@color/secondary_yellow"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/labelTimeFrom"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/labelTimeTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_time_to"
                android:textColor="@color/secondary_yellow"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toEndOf="@+id/etTimeFrom"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <EditText
                android:id="@+id/etTimeTo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="HH:mm"
                android:inputType="time"
                android:focusable="false"
                android:clickable="true"
                android:minHeight="48dp"
                android:background="@drawable/profile_info_background"
                android:textColor="@color/secondary_yellow"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/labelTimeTo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/labelAutoLocationUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_auto_location_update"
            style="@style/AppSubtitle"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeIntervalContainer" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/autoLocationUpdateContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/profile_info_background"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/labelAutoLocationUpdate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvAutoLocationUpdateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_auto_location_update_toggle"
                android:textColor="@color/secondary_yellow"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/switchAutoLocationUpdate"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchAutoLocationUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                app:trackTint="@color/switch_track_tint"
                app:thumbTint="@color/switch_thumb_tint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/labelLocationCoords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_location_coords"
            style="@style/AppSubtitle"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autoLocationUpdateContainer" />

        <TextView
            android:id="@+id/tvLocationCoords"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:minHeight="56dp"
            style="@style/ProfileInfoText"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/labelLocationCoords"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/labelRadius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_radius"
            style="@style/AppSubtitle"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLocationCoords" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/radiusContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="56dp"
            android:background="@drawable/profile_info_background"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/labelRadius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.slider.Slider
                android:id="@+id/sliderRadius"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:valueFrom="0.0"
                android:valueTo="5.0"
                android:stepSize="1.0"
                android:value="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvRadiusValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvRadiusValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 m"
                android:textColor="@color/secondary_yellow"
                android:textSize="16sp"
                android:textStyle="bold"
                android:minWidth="60dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_update_range"
            style="@style/PrimaryButton"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/radiusContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_password_link"
            android:textColor="#2196F3"
            android:textSize="14sp"
            android:padding="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btnUpdateRange"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnShowMap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_show_map"
            style="@style/PrimaryButton"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tvUserUid"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_logout"
            style="@style/AccentButton"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/tvChangePassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_login_profile"
            style="@style/PrimaryButton"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_register_profile"
            style="@style/PrimaryButton"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.example.mv11.BottomNavigationWidget
        android:id="@+id/bottomNavigationWidget"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

