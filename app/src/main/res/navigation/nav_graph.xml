<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/introFragment">

    <fragment
        android:id="@+id/introFragment"
        android:name="com.example.mv11.IntroFragment"
        android:label="Intro">

        <action
            android:id="@+id/action_intro_to_prihlasenie"
            app:destination="@id/prihlasenieFragment" />

        <action
            android:id="@+id/action_intro_to_signup"
            app:destination="@id/signupFragment" />

        <action
            android:id="@+id/action_intro_to_map"
            app:destination="@id/mapFragment" />

        <action
            android:id="@+id/action_intro_to_feed"
            app:destination="@id/feedFragment" />

        <action
            android:id="@+id/action_intro_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/prihlasenieFragment"
        android:name="com.example.mv11.PrihlasenieFragment"
        android:label="Prihlásenie">

        <action
            android:id="@+id/action_prihlasenie_to_signup"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.example.mv11.SignupFragment"
        android:label="Registrácia">

        <action
            android:id="@+id/action_signup_to_intro"
            app:destination="@id/introFragment" />

        <action
            android:id="@+id/action_signup_to_prihlasenie"
            app:destination="@id/prihlasenieFragment" />
    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.mv11.FeedFragment"
        android:label="Feed">
        <action
            android:id="@+id/action_feed_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.mv11.MapFragment"
        android:label="Mapa">
        <argument
            android:name="targetUserId"
            android:defaultValue=""
            app:argType="string" />
        <action
            android:id="@+id/action_map_to_profile"
            app:destination="@id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mv11.ProfileFragment"
        android:label="Profil">
        <argument
            android:name="userId"
            android:defaultValue=""
            app:argType="string" />

        <action
            android:id="@+id/action_profile_to_signin"
            app:destination="@id/prihlasenieFragment" />

        <action
            android:id="@+id/action_profile_to_signup"
            app:destination="@id/signupFragment" />

        <action
            android:id="@+id/action_profile_to_change_password"
            app:destination="@id/changePasswordFragment" />

        <action
            android:id="@+id/action_profile_to_map"
            app:destination="@id/mapFragment" />
    </fragment>

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.example.mv11.ChangePasswordFragment"
        android:label="Zmena hesla">
    </fragment>

    <fragment
        android:id="@+id/numberFragment"
        android:name="com.example.mv11.NumberFragment"
        android:label="Random Number">
    </fragment>

</navigation>